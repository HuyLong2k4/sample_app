<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app.name"), Settings.home_link, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("contact.nav.home"), contact_pages_home_path %></li>
        <li><%= link_to t("contact.nav.help"), contact_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: { bs_toggle: "dropdown" }, role: "button", aria: { expanded: "false" } do %>
              <%= t("contact.nav.account") %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("contact.nav.profile"), current_user %></li>
              <li><%= link_to t("contact.nav.settings"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= button_to t("contact.nav.log_out"),
                    logout_path,
                    method: :delete,
                    form: { style: "display:inline;" },
                    class: "dropdown-item" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("contact.nav.login"), login_path %></li>
        <% end %>
        <li><%= link_to t("contact.nav.lang.vi"), url_for(locale: :vi), class: "language-switch" %></li>
        <li><%= link_to t("contact.nav.lang.en"), url_for(locale: :en), class: "language-switch" %></li>
      </ul>
    </nav>
  </div>
</header>
