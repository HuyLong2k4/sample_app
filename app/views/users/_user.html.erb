<li>
  <%= gravatar_for user, size: Settings.gravatar.users %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %> 
    <%= link_to "delete", user, 
                data: { "turbo-method": :delete,
                        turbo_confirm: t(".confirm_delete") } %>
  <% end %>
</li>
